import time
from lsm6ds3_control import accel_x, accel_y, accel_z, gyro_x, gyro_y, gyro_z

while True:
    print(f"Accel: X={accel_x():.2f} m/s², Y={accel_y():.2f} m/s², Z={accel_z():.2f} m/s²")
    print(f"Gyro:  X={gyro_x():.2f} rad/s, Y={gyro_y():.2f} rad/s, Z={gyro_z():.2f} rad/s\n")
    time.sleep(0.5)
