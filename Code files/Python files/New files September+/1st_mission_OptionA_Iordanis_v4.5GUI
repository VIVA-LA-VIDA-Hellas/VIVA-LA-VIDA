def update_ui_plots():
    """Update matplotlib plots using current data."""
    if front_data:
        front_line.set_data(range(len(front_data)), front_data)
        # Color-code based on distance
        front_line.set_color("green" if front_data[-1]>=100 else "yellow" if front_data[-1]>=50 else "red")
    if left_data:
        left_line.set_data(range(len(left_data)), left_data)
        left_line.set_color("green" if left_data[-1]>=100 else "yellow" if left_data[-1]>=50 else "red")
    if right_data:
        right_line.set_data(range(len(right_data)), [-v for v in right_data])
        right_line.set_color("green" if right_data[-1]>=100 else "yellow" if right_data[-1]>=50 else "red")
    # Set x-axis limits to last 100 points
    ax_front.set_xlim(max(0,len(time_data)-100), len(time_data))
    ax_side.set_xlim(max(0,len(time_data)-100), len(time_data))
    canvas.draw()  # Redraw canvas

def update_ui_from_queue():
    """Read sensor data from queue and update plot arrays."""
    try:
        while True:
            t, f, l, r = data_queue.get_nowait()  # Non-blocking get
            time_data.append(t)
            front_data.append(f)
            left_data.append(l)
            right_data.append(r)
            if len(time_data) > 100:
                time_data.pop(0); front_data.pop(0); left_data.pop(0); right_data.pop(0)
    except queue.Empty:
        pass
    update_ui_plots()
    root.after(100, update_ui_from_queue)  # Schedule next update

update_ui_from_queue()  # Start periodic UI update

# ===============================
# ROBOT MAIN LOOP THREAD
# ===============================
def robot_loop():
    """Main loop for sensor reading, PID control, and turn logic."""
    t = 0  # Time step counter
    turning = False  # Currently turning
    turn_start_time = 0
    last_turn_time = -TURN_LOCKOUT  # Initialize last turn time
    direction = None
    d_front = d_left = d_right = None

    while True:
        current_time = time.monotonic()  # High-resolution monotonic clock

        # -------------------------------
        # SENSOR READING
        # -------------------------------
        if reading_flag:
            d_front = robot.filtered_distance(TRIG_FRONT, ECHO_FRONT, robot.front_history)
            d_left = robot.filtered_distance(TRIG_LEFT, ECHO_LEFT, robot.left_history)
            d_right = robot.filtered_distance(TRIG_RIGHT, ECHO_RIGHT, robot.right_history)
            # Send data to queue for thread-safe plotting
            data_queue.put((t, d_front or 0, d_left or 0, d_right or 0))
            t += 1

        # -------------------------------
        # MAIN CONTROL LOOP
        # -------------------------------
        if loop_flag and not paused_flag:

            # EMERGENCY STOP
            if d_front is not None and d_front < slider_vars["STOP_THRESHOLD"].get():
                robot.stop_motor()
                root.after(0, lambda: status_var.set("Stopped! Obstacle ahead"))
                time.sleep(0.05)
                continue

            # INITIATE TURN IF NEEDED
            front_trigger = slider_vars["FRONT_TURN_TRIGGER"].get()
            if (not turning and d_front is not None and d_front < front_trigger
                and (d_left>100 or d_right>100)
                and current_time - last_turn_time >= slider_vars["TURN_LOCKOUT"].get()):
                direction = robot.turn_decision(d_left, d_right)
                turning = True
                turn_start_time = current_time
                root.after(0, lambda dir=direction: status_var.set(f"Turning {dir}"))

            # TURNING LOGIC
            if turning:
                angle = slider_vars["TURN_ANGLE_LEFT"].get() if direction=="LEFT" else slider_vars["TURN_ANGLE_RIGHT"].get()
                side_distance = d_left if direction=="LEFT" else d_right
                robot.set_servo(angle)
                robot.rotate_motor(slider_vars["SPEED_TURN"].get())
                # End turn if front cleared, side distance OK, or timeout
                if ((d_front is not None and d_front > front_trigger and side_distance > slider_vars["TARGET_DISTANCE"].get())
                    or (current_time - turn_start_time > slider_vars["TURN_TIMEOUT"].get())):
                    robot.stop_motor()
                    robot.set_servo(slider_vars["SERVO_CENTER"].get())
                    turning = False
                    last_turn_time = current_time  # Update lockout AFTER turn ends
                    root.after(0, lambda: status_var.set("Driving"))
                time.sleep(0.05)
                continue  # Skip PID during turn

            # PID WALL-FOLLOWING
            output = robot.pid_control(d_left, d_right)
            new_angle = slider_vars["SERVO_CENTER"].get() + output
            new_angle = max(slider_vars["SERVO_MIN_ANGLE"].get(),
                            min(slider_vars["SERVO_MAX_ANGLE"].get(), new_angle))
            robot.set_servo(new_angle)
            robot.rotate_motor(slider_vars["SPEED_CRUISE"].get())
            root.after(0, lambda: status_var.set("Driving"))

        time.sleep(0.05)  # Loop delay to reduce CPU load

# Start robot loop in background thread
threading.Thread(target=robot_loop, daemon=True).start()

# ===============================
# CLEANUP ON EXIT
# ===============================
def on_closing():
    """Stop motors and clean GPIO when window closes."""
    try:
        robot.stop_motor()
        GPIO.cleanup()
    except:
        pass
    root.destroy()

root.protocol("WM_DELETE_WINDOW", on_closing)  # Bind window close
root.mainloop()  # Start Tkinter event loop


