# ===============================
# ROBOT CONTROLLER CLASS
# ===============================
class RobotController:
    """Encapsulates motor, servo, and sensor control with PID and turn logic."""
    def __init__(self, pca, slider_vars):
        self.pca = pca  # PCA9685 object
        self.slider_vars = slider_vars  # GUI slider variables
        self.integral = 0  # PID integral term
        self.last_error = 0  # Last error for PID derivative
        self.front_history = deque(maxlen=N_READINGS)  # Sliding window for front sensor
        self.left_history = deque(maxlen=N_READINGS)  # Sliding window for left sensor
        self.right_history = deque(maxlen=N_READINGS)  # Sliding window for right sensor

    # -------------------------------
    # Servo control
    # -------------------------------
    def set_servo(self, angle):
        """Set servo angle within configured min/max and send PWM."""
        min_angle = self.slider_vars["SERVO_MIN_ANGLE"].get()
        max_angle = self.slider_vars["SERVO_MAX_ANGLE"].get()
        angle = max(min_angle, min(max_angle, angle))  # Clamp angle
        # Convert angle to PWM pulse
        pulse = int(1000 + (2000-1000)*((angle-min_angle)/(max_angle-min_angle)))
        self.pca.channels[SERVO_CHANNEL].duty_cycle = int(pulse*65535/20000)

    # -------------------------------
    # Motor control
    # -------------------------------
    def rotate_motor(self, speed):
        """Rotate motor at given speed (positive forward, negative backward)."""
        duty_cycle = int(min(max(abs(speed),0),100)/100*65535)
        if speed >= 0:
            self.pca.channels[MOTOR_FWD].duty_cycle = duty_cycle
            self.pca.channels[MOTOR_REV].duty_cycle = 0
        else:
            self.pca.channels[MOTOR_FWD].duty_cycle = 0
            self.pca.channels[MOTOR_REV].duty_cycle = duty_cycle

    def stop_motor(self):
        """Stop both motors immediately."""
        self.pca.channels[MOTOR_FWD].duty_cycle = 0
        self.pca.channels[MOTOR_REV].duty_cycle = 0

    # -------------------------------
    # Ultrasonic distance measurement
    # -------------------------------
    def get_distance(self, trig, echo):
        """Get distance in cm from ultrasonic sensor."""
        try:
            GPIO.output(trig, True)
            time.sleep(0.00001)  # 10us trigger pulse
            GPIO.output(trig, False)
            start_time = time.perf_counter()
            # Wait for echo start
            while GPIO.input(echo) == 0:
                if time.perf_counter() - start_time > 0.02:  # 20ms timeout
                    return None
            pulse_start = time.perf_counter()
            # Wait for echo end
            while GPIO.input(echo) == 1:
                if time.perf_counter() - pulse_start > 0.02:  # 20ms timeout
                    return None
            pulse_end = time.perf_counter()
            return (pulse_end - pulse_start) * 17150  # Convert to cm
        except:
            return None  # Return None if reading fails

    # -------------------------------
    # Median filter
    # -------------------------------
    def filtered_distance(self, trig, echo, history):
        """Return median-filtered distance using sliding window."""
        d = self.get_distance(trig, echo)
        if d is not None:
            history.append(d)  # Add new reading to history
        if history:
            sorted_hist = sorted(history)
            mid = len(sorted_hist)//2
            # Return median value
            return (sorted_hist[mid-1]+sorted_hist[mid])/2 if len(sorted_hist)%2==0 else sorted_hist[mid]
        return None  # No valid readings yet

    # -------------------------------
    # PID wall-following
    # -------------------------------
    def pid_control(self, d_left, d_right):
        """Compute PID output based on left/right distances."""
        error = 0
        if d_left is not None and d_right is not None:
            error = d_left - d_right  # Difference between walls
        elif d_left is not None:
            error = self.slider_vars["TARGET_DISTANCE"].get() - d_left
        elif d_right is not None:
            error = d_right - self.slider_vars["TARGET_DISTANCE"].get()

        self.integral += error  # Update integral term
        self.integral = max(min(self.integral,100),-100)  # Clamp integral to avoid windup
        derivative = error - self.last_error  # PID derivative
        self.last_error = error

        # Use real-time PID gains from sliders
        kp = self.slider_vars["KP"].get()
        kd = self.slider_vars["KD"].get()
        # Adaptive gains for large errors
        if abs(error) > 20:
            kp *= 1.5
            kd *= 2.0

        output = kp*error + kd*derivative
        # Apply deadzone
        if abs(error) < self.slider_vars["DEADZONE"].get():
            output = 0
        return output

    # -------------------------------
    # Turn decision
    # -------------------------------
    def turn_decision(self, d_left, d_right):
        """Decide turn direction based on side distances."""
        threshold = 100  # Minimum side clearance
        if d_left is not None and d_left > threshold:
            return "LEFT"
        elif d_right is not None and d_right > threshold:
            return "RIGHT"
        # Default to side with more space
        if d_left is not None and d_right is not None:
            return "LEFT" if d_left > d_right else "RIGHT"
        elif d_left is not None:
            return "LEFT"
        elif d_right is not None:
            return "RIGHT"
        return "LEFT"  # Fallback

# Instantiate robot controller
robot = RobotController(pca, slider_vars)

